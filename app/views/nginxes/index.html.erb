<p id="notice"><%= notice %></p>

<h1>Nginxes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nginxes.each do |nginx| %>
      <tr>
        <td><%= nginx.title %></td>
        <td><%= nginx.content %></td>
        <td><%= link_to 'Show', nginx %></td>
        <td><%= link_to 'Edit', edit_nginx_path(nginx) %></td>
        <td><%= link_to 'Destroy', nginx, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

